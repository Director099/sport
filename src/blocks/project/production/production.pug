mixin production({title, filter, category, categoryTag})
	.section-content
		+title-wrap(title)
			a.link-all(href="products.html", data-text="Посмотреть все") Все
		.section-content__wrap.default-slider
			if(filter === true)
				ul.tab-filter
					li.tab-filter__item
						a.tab-filter__btn.active(data-btn-filter="all") Все
					li.tab-filter__item
						a.tab-filter__btn(data-btn-filter="gost") Футбол
					li.tab-filter__item
						a.tab-filter__btn(data-btn-filter="rti") Баскетбол
			.default-slider
				.swiper-container.js-auto-slider
					.swiper-wrapper
						.swiper-slide.default-slider__width-4(data-filter="gost")
							+product({
                category: category,
                categoryTag: tag
              })
						.swiper-slide.default-slider__width-4(data-filter="gost")
							+product({
                category: category,
                categoryTag: tag
              })
						.swiper-slide.default-slider__width-4(data-filter="gost")
							+product({
                category: category,
                categoryTag: tag
              })
						.swiper-slide.default-slider__width-4(data-filter="rti")
							+product({
                category: category,
                categoryTag: tag
              })
						.swiper-slide.default-slider__width-4(data-filter="rti")
							+product({
                category: category,
                categoryTag: tag
              })
						.swiper-slide.default-slider__width-4(data-filter="rti")
							+product({
                category: category,
                categoryTag: tag
              })
						.swiper-slide.default-slider__width-4(data-filter="rti")
							+product({
                category: category,
                categoryTag: tag
              })
				.swiper-button-next
				.swiper-button-prev
